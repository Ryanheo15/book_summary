<main id = "registerMain">
  <div class = "container-custom pt-5 mt-5">
    <div class = "row">
      <div class = "col-md-6 offset-3 pt-5">
      <h1 class = "text-center text-white">Sign up to view book summaries</h1>
      </div>
    </div>
    <div class = "row text-center mt-5">
      <div class = "col-md-6 offset-3 p-5" id = "register_cont">
        <h1>New User</h1>
        <form action = "/register" method = "POST" class = "mt-4">
          <div class = "form-group">
            <div class = "row">
              <div class = "col-md-6">
                <input class = "form-control" placeholder = "First name" name = "first" required></input>
              </div>
              <div class = "col-md-6">
                <input class = "form-control" placeholder = "Last name" name = "last"></input>
              </div>
            </div>
          </div>
          <div class = "form-group">
            <input class = "form-control" placeholder = "Username" name = "username"></input>
          </div>

          <div class = "form-group">
            <input class = "form-control" placeholder = "Password" name = "password" type = "password"></input>
          </div>

          <div class="form-group">
            <input class = "form-control pb-3" type = "file" name = "image"></input>
          </div>

          <div class = "form-group">
            <p>Already a member? Login <a href = "\login">Here</a></p>
          </div>

          <div class = "form-group">
            <button class = "btn btn-info btn-block b-none" type = "submit" style = "background-color: #000000 !important; border:none !important">Submit</button>
          </div>

        </form>
      </div>
    </div>
  </div>
</main>

